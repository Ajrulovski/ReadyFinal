<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="gazmend.com.mk.ready.Splash">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ready_logo"
        android:transitionName="profile"/>
    <TextView
        android:id="@+id/middletext"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choice_register_middle"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24dp"
        android:padding="64dp"/>
    <LinearLayout
        android:id="@+id/leftpart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/middletext"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:padding="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regclient"
            android:layout_weight="0.5"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:contentDescription="@string/cd_regclient"
            android:src="@drawable/register_icon_client"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regbus"
            android:layout_weight="0.5"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:contentDescription="@string/cd_regbus"
            android:src="@drawable/register_icon_business"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lowpart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/leftpart"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:text="Client"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:text="Business"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>

</RelativeLayout>
